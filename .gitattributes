# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python

# Documentation
*.md text diff=markdown
*.txt text
*.rst text

# Config files
*.yml text
*.yaml text
*.toml text
*.ini text
*.cfg text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.pdf binary
*.zip binary
*.tar.gz binary

# Logs (should be ignored, but just in case)
*.log text eol=lf

# Environment files
.env* text eol=lf
