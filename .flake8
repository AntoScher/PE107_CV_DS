[flake8]
max-line-length = 127
max-complexity = 10
ignore = 
    E203,
    E501,
    W503,
    F401,
    F403,
    F405,
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    env,
    .env,
    build,
    dist,
    *.egg-info,
    .mypy_cache,
    .pytest_cache,
    .coverage,
    htmlcov,
    logs,
    temp,
    tmp
per-file-ignores =
    __init__.py:F401
    test_*.py:F401,F403,F405
